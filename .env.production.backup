# =================
# FITGENIUS - PRODUCTION ENVIRONMENT
# =================

# ===== DATABASE =====
# PostgreSQL Production - Configure with Supabase/Neon
DATABASE_URL="postgresql://user:password@host:5432/fitgenius_prod"
DIRECT_URL="postgresql://user:password@host:5432/fitgenius_prod"

# ===== NEXTAUTH =====
NEXTAUTH_URL="https://fitgenius.app"
NEXTAUTH_SECRET="GENERATE_A_SECURE_SECRET_WITH_OPENSSL_RAND_BASE64_32"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===== EMAIL SERVICE =====
# Using Resend for transactional emails
EMAIL_SERVER_HOST="smtp.resend.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="resend"
EMAIL_SERVER_PASSWORD="re_your_api_key_here"
EMAIL_FROM="noreply@fitgenius.app"

# ===== REAL-TIME =====
SOCKET_URL="wss://fitgenius.app"

# ===== FILE STORAGE =====
# Cloudinary for image/video uploads
STORAGE_PROVIDER="cloudinary"
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===== PAYMENT =====
# Stripe for international payments
STRIPE_PUBLIC_KEY="pk_live_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# MercadoPago for Brazilian payments
MERCADOPAGO_PUBLIC_KEY="APP_USR-your-public-key"
MERCADOPAGO_ACCESS_TOKEN="APP_USR-your-access-token"

# ===== MONITORING =====
# Sentry for error tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-org"
SENTRY_PROJECT="fitgenius"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ===== SECURITY =====
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# JWT Secrets
JWT_SECRET="your-jwt-secret-key-here"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"

# ===== PWA =====
VAPID_SUBJECT="mailto:admin@fitgenius.app"
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# ===== API INTEGRATIONS =====
# OpenAI for AI features
OPENAI_API_KEY="sk-your-openai-api-key"

# WhatsApp Business API
WHATSAPP_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# ===== BACKUP =====
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# ===== ENVIRONMENT =====
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://fitgenius.app"
NEXT_PUBLIC_API_URL="https://fitgenius.app/api"
NEXT_PUBLIC_SOCKET_URL="wss://fitgenius.app"